%main#registration-new
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = devise_error_messages!

    .signup-panel
      %p.signup-panel__title 会員情報入力
      .form-content
        .form-group
          %label ニックネーム
          %span.form-require 必須
          = f.text_field :nickname, class: "field__input", autocomplete: "nickname", placeholder: "例) メルカリ太郎"
        .form-group
          %label メールアドレス
          %span.form-require 必須
          = f.email_field :email, class: "field__input", autocomplete: "email", placeholder: "PC・携帯どちらでも可"
        .form-group
          %label パスワード
          %span.form-require 必須
          = f.password_field :password, class: "field__input", autocomplete: "password", placeholder: "7文字以上"
        .form-group
          %label パスワード(確認)
          %span.form-require 必須
          = f.password_field :password_confirmation, class: "field__input", autocomplete: "password", placeholder: "7文字以上"
        .field
          %h3 本人確認
          %p 安心・安全にご利用いただくために、お客様の本人情報の登録にご協力ください。他のお客さまに公開されることはありません。
        .form-group
          %div
            %label お名前(全角)
            %span.form-require 必須
          = f.text_field :last_name, class: "field__input--left", autocomplete: "last_name", placeholder: "例) 山田"
          = f.text_field :first_name, class: "field__input--right", autocomplete: "first_name", placeholder: "例) 綾"
        .form-group
          %div
            %label お名前カナ(全角)
            %span.form-require 必須
          = f.text_field :last_name, class: "field__input--left", autocomplete: "last_name", placeholder: "例) ヤマダ"
          = f.text_field :first_name, class: "field__input--right", autocomplete: "last_name", placeholder: "例) アヤ"
        .form-group
          %label 生年月日
          %span.form-require 必須
          .select-wrap
            %select
              %option --
              = (1900..2019). each do |i|
                = year = "#{i}"
                %option{value: i}
                  = year
            %span 年

            %select
              %option --
              = (1..12). each do |i|
                = month = "#{i}"
                %option{value: i}
                  = month
            %span 月

            %select
              %option --
              = (1..31). each do |i|
                = day = "#{i}"
                %option{value: i}
                  = day
            %span 日

            %p.form-info
              * 本人情報は正しく入力してください。会員登録後、修正するにはお時間をいただく場合があります。

            .signup-panel
              %p.signup-panel__title 電話番号の確認
              .form-group
                %label 携帯電話の番号
                %span.form-require 必須
              = f.text_field :phone_number, class: "field__input", autocomplete: "phone_number", placeholder: "携帯電話の番号を入力"

              %p.form-info--tell
                本人確認のため、携帯電話のSMS(ショートメッセージサービス)を利用して認証を行います。

              .signup-btn
              %p.form-info
                ※電話番号は本人確認や不正利用防止のために利用します。他のユーザーに公開されることはありません。
                      
            .signup-panel
              %p.signup-panel__title 電話番号認証
              .form-group
                %label 認証番号
                %span.form-require 必須
              = f.text_field :phone_number, class: "field__input", autocomplete: "certification_number", placeholder: "認証番号を入力"

              %p.form-info--tell
                SMSで届いた認証番号を入力してください

              .signup-btn

            .field__center
              %h4 30秒たっても認証番号が届かない方へ
              %p.form-info--tell
                電話で認証番号を聞くこともできます。

            .field__bottom
              %h4 認証番号を再送することができます。もう一度電話番号を入力してください。
              
              %h4 電話番号を再度入力する

            .signup-panel
              %p.signup-panel__title 発送元・お届け先住所入力
              .form-group
                %div
                  %label お名前
                  %span.form-require 必須
                = f.text_field :last_name, class: "field__input--left", placeholder: "例)山田"
                = f.text_field :first_name, class: "field__input--right", placeholder: "例）綾"
              .form-group
                %div
                  %label お名前カナ
                  %span.form-require 必須
                = f.text_field :last_name_kata, class: "field__input--left", placeholder: "例）ヤマダ"
                = f.text_field :first_name_kata, class: "field__input--right", placeholder: "例）アヤ"
              .form-group
                %label 郵便番号
                %span.form-require 必須
                = f.text_field :post_code, class: "field__input", placeholder: "例）123-4567"
              .form-group
                %label 都道府県
                %span.form-require 必須
                = f.text_field :prefecture, class: "field__input", placeholder: "例）北海道"
              .form-group
                %label 市区町村
                %span.form-require 必須
                = f.text_field :city_village_town, class: "field__input", placeholder: "例）横浜市緑区"
              .form-group
                %label 番地
                %span.form-require 必須
                = f.text_field :house_number, class: "field__input", placeholder: "例）青山1-1-1"
              .form-group
                %label 建物名
                %span.form-require--gray 任意
                = f.text_field :building, class: "field__input", autocomplete: "email", placeholder: "例）柳ビル103"
              .form-group
                %label 携帯電話の番号
                %span.form-require--gray 任意
                = f.text_field :phone_number, class: "field__input", autocomplete: "current-password", placeholder: "例）09012345678"

            .signup-panel
              %p.signup-panel__title 支払い方法
            = form_tag("/", method: :post, id: 'charge-form', name: "inputForm") do
              .form-group
                %label{for: "card_number"} カード番号
                %span.form-require 必須
                = text_field_tag "number", "", class: "field__input", placeholder:"半角数字のみ", maxlength: "16", type: "text", id: "card_number"
                %ul.signup-card-list
                  %img{src:"//www-mercari-jp.akamaized.net/assets/img/card/visa.svg?465897195", width: "49", height: "20"}
                  %img{src:"//www-mercari-jp.akamaized.net/assets/img/card/master-card.svg?465897195", width: "34", height: "20"}
                  %img{src:"//www-mercari-jp.akamaized.net/assets/img/card/saison-card.svg?465897195", width: "30", height: "20"}
                  %img{src:"//www-mercari-jp.akamaized.net/assets/img/card/jcb.svg?465897195", width: "32", height: "20",}
                  %img{src:"//www-mercari-jp.akamaized.net/assets/img/card/american_express.svg?465897195", width: "21", height: "20"}
                  %img{src:"//www-mercari-jp.akamaized.net/assets/img/card/dinersclub.svg?465897195", width: "32", height: "20"}
                  %img{src:"//www-mercari-jp.akamaized.net/assets/img/card/discover.svg?465897195", width: "32", height: "20"}
              .form-group
                %label 有効期限
                %span.form-require 必須
                .select-wrap
                  %select#exp_month{name: "exp_month", type: "text"}
                    %option{value: ""} --
                    %option{value: "1"}01
                    %option{value: "2"}02
                    %option{value: "3"}03
                    %option{value: "4"}04
                    %option{value: "5"}05
                    %option{value: "6"}06
                    %option{value: "7"}07
                    %option{value: "8"}08
                    %option{value: "9"}09
                    %option{value: "10"}10
                    %option{value: "11"}11
                    %option{value: "12"}12
                  %span 月
                .select-wrap
                  %select#exp_year{name: "exp_year", type: "text"}
                    %option{value: ""} --
                    %option{value: "2019"}19
                    %option{value: "2020"}20
                    %option{value: "2021"}21
                    %option{value: "2022"}22
                    %option{value: "2023"}23
                    %option{value: "2024"}24
                    %option{value: "2025"}25
                    %option{value: "2026"}26
                    %option{value: "2027"}27
                    %option{value: "2028"}28
                    %option{value: "2029"}29
                  %span 年
              .form-group
                %label セキュリティーコード
                %span.form-require 必須
                = text_field_tag "cvc", "", class: "field__input", placeholder:"カード背面4桁もしくは3桁の番号", maxlength: "4", id: "cvc"
                .signup-seqcode
                  %span.form-question 
                    ?
                  カード裏面の番号とは？
              #card_token
                = submit_tag "登録する", class: "submit", id: "token_submit"