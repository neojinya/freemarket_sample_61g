= render 'shared/header'
.container-damy{:style => "width: 1020px; margin: 0 auto 0;"}
  #mypage-wrapper
    // right-content
    = render "mypage/left-content"

    // left-content
    .right-content
      #credit-wrapper
        %h2.header
          クレジットカード情報入力
          = form_tag( '/cards', method: :post, id: 'charge-form', name: "inputForm", class:"card-form" ) do
            .form-content
              .form-content__card-num
                %label カード番号
                %span.require 必須
                = text_field_tag "number", "", class: "number-input", placeholder:"半角数字のみ", maxlength: "16", type: "text", id: "card_number"
                %ul.card-list
                  %li.card-list__img
                    %img{src:"//www-mercari-jp.akamaized.net/assets/img/card/visa.svg?465897195", width:"49", height:"20"}
                  %li.card-list__img
                    %img{src:"//www-mercari-jp.akamaized.net/assets/img/card/master-card.svg?465897195", width:"34", height:"20"}
                  %li.card-list__img
                    %img{src:"//www-mercari-jp.akamaized.net/assets/img/card/saison-card.svg?465897195", width:"34", height:"20"}
                  %li.card-list__img
                    %img{src:"//www-mercari-jp.akamaized.net/assets/img/card/jcb.svg?465897195", width:"34", height:"20"}
                  %li.card-list__img
                    %img{src:"//www-mercari-jp.akamaized.net/assets/img/card/visa.svg?465897195", width:"34", height:"20"}
                  %li.card-list__img
                    %img{src:"//www-mercari-jp.akamaized.net/assets/img/card/dinersclub.svg?465897195", width:"34", height:"20"}
                  %li.card-list__img
                    %img{src:"//www-mercari-jp.akamaized.net/assets/img/card/discover.svg?465897195", width:"34", height:"20"}
              .form-content__expiration-date
                %label 有効期限
                %span.require 必須
                %div
                  .select-wrap
                    %select#exp_month{name: "exp_month", type: "text"}
                      %option{value: ""} --
                      %option{value: "1"}01
                      %option{value: "2"}02
                      %option{value: "3"}03
                      %option{value: "4"}04
                      %option{value: "5"}05
                      %option{value: "6"}06
                      %option{value: "7"}07
                      %option{value: "8"}08
                      %option{value: "9"}09
                      %option{value: "10"}10
                      %option{value: "11"}11
                      %option{value: "12"}12
                    %span 月
                  .select-wrap
                    %select#exp_year{name: "exp_year", type: "text"}
                      %option{value: ""} --
                      %option{value: "2019"}19
                      %option{value: "2020"}20
                      %option{value: "2021"}21
                      %option{value: "2022"}22
                      %option{value: "2023"}23
                      %option{value: "2024"}24
                      %option{value: "2025"}25
                      %option{value: "2026"}26
                      %option{value: "2027"}27
                      %option{value: "2028"}28
                      %option{value: "2029"}29
                    %span 年
              .form-content__security-code
                %label セキュリティコード
                %span.require 必須
                = text_field_tag "cvc", "", class: "input", placeholder:"カード背面4桁もしくは3桁の番号", maxlength: "4", id: "cvc"
                .abaut-seqcode
                  .abaut-seqcode__text
                    %span カード裏面の番号とは？
              #card_token
                = submit_tag "追加する", class: "submit", id: "token_submit"
= render 'shared/footer'