= render 'shared/header'
= render "layouts/breadcrumbs"
.container-damy{:style => "width: 1020px; margin: 0 auto 0;"}
  #mypage-wrapper
    // right-content
    = render "mypage/left-content"

    // left-content
    .right-content
      #credit-wrapper
        %h2.header
          クレジットカード情報入力
        %form.card-form
          .form-content
            .form-content__card-num
              %label カード番号
              %span.require 必須
              %input.number-input{type:"text", placeholder:"半角数字のみ"}
              %ul.card-list
                %li.card-list__img
                  %img{src:"//www-mercari-jp.akamaized.net/assets/img/card/visa.svg?465897195", width:"49", height:"20"}
                %li.card-list__img
                  %img{src:"//www-mercari-jp.akamaized.net/assets/img/card/master-card.svg?465897195", width:"34", height:"20"}
                %li.card-list__img
                  %img{src:"//www-mercari-jp.akamaized.net/assets/img/card/saison-card.svg?465897195", width:"34", height:"20"}
                %li.card-list__img
                  %img{src:"//www-mercari-jp.akamaized.net/assets/img/card/jcb.svg?465897195", width:"34", height:"20"}
                %li.card-list__img
                  %img{src:"//www-mercari-jp.akamaized.net/assets/img/card/visa.svg?465897195", width:"34", height:"20"}
                %li.card-list__img
                  %img{src:"//www-mercari-jp.akamaized.net/assets/img/card/dinersclub.svg?465897195", width:"34", height:"20"}
                %li.card-list__img
                  %img{src:"//www-mercari-jp.akamaized.net/assets/img/card/discover.svg?465897195", width:"34", height:"20"}
            .form-content__expiration-date
              %label 有効期限
              %span.require 必須
              %div
                .select-wrap
                  %select.month
                  %i.arrow
                  %span 月
                .select-wrap
                  %select.year
                  %i.arrow
                  %span 年
            .form-content__security-code
              %label セキュリティコード
              %span.require 必須
              %input{type:"text",placeholder:"カード背面4桁もしくは3桁の番号"}
              .abaut-seqcode
                .abaut-seqcode__text
                  %span カード裏面の番号とは？
            %button.submit
              追加する
= render 'shared/footer'